{
  "compilerOptions": {
    // We don't want to check node_modules
    "skipLibCheck": true,
    "module": "node18",
    // Node.js 18 supports up to ES2022 according to https://www.npmjs.com/package/@tsconfig/node18
    "target": "es2022",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    // For testing purposes
    // TODO: Should use this for tests as well perhaps, resolve.alias
    "paths": {
      "meilisearch": ["./src/index.ts"],
      "meilisearch/token": ["./src/token.ts"]
    }
  }
}
